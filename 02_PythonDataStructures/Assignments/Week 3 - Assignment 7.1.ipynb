   "source": [
    "# Use words.txt as the file name\n",
    "fname = input(\"Enter file name: \")\n",
    "fh = open(fname)\n",
    "read_file = fh.read() # read to a variable named read_file\n",
    "strip_file = read_file.strip() # remove white spaces\n",
    "print(strip_file.upper())"
